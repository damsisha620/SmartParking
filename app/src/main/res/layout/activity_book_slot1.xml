<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".BookSlotActivity1">

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="15dp"
           android:layout_margin="15dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/marker"
                   android:textAlignment="center"
                   android:textSize="30dp"
                   android:text="Marker title"
                   android:layout_marginTop="20dp"
                  android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                   />
           <TextView
               android:id="@+id/phone_textl"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Phone Number*"
               android:inputType="text"
               android:textColor="#555555"
               android:textSize="16dp"
               android:layout_below="@+id/marker"
               android:layout_marginTop="50dp"
               />
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/phone_editl"
               android:hint="Enter 10 digit phone numbers"
               android:layout_below="@id/phone_textl"
               android:layout_marginTop="10dp"
               android:textSize="16dp"
               android:background="@drawable/border"
               android:padding="6dp"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/text_current"
               android:text="Current Location*"
               android:layout_below="@id/phone_editl"
               android:layout_marginTop="10dp"
               android:textColor="#555555"
               />
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/edit_location"
               android:text="Click on location button"
               android:layout_below="@id/text_current"
               android:layout_marginTop="15dp"
               android:textSize="16dp"
               android:background="@drawable/border"
               android:layout_marginLeft="30dp"
               android:paddingRight="10dp"
               android:padding="6dp"/>
           <ImageButton
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:layout_below="@+id/text_current"
               android:id="@+id/icon_location"
               android:background="@drawable/icon_loc"

               android:layout_marginTop="25dp"/>
           <TextView
               android:id="@+id/text_destination"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Destination*"
               android:inputType="text"
               android:layout_below="@+id/edit_location"
               android:textColor="#555555"
               android:textSize="16dp"
               android:layout_marginTop="10dp"
               />


           <EditText
               android:id="@+id/destination_edit"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:inputType="text"
               android:layout_below="@+id/text_destination"
               android:layout_marginTop="5dp"
               android:hint="Enter destination"
               android:background="@drawable/border"
               android:padding="6dp"
               android:textSize="16dp" />

           <TextView
               android:id="@+id/vehicle_type"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Vehicle Type*"
               android:inputType="text"
               android:layout_below="@+id/destination_edit"
               android:textColor="#555555"
               android:textSize="16dp"
               android:layout_marginTop="10dp"
               />


           <EditText
               android:id="@+id/vehicle_edit"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:inputType="text"
               android:background="@drawable/border"
               android:layout_below="@+id/vehicle_type"
               android:layout_marginTop="5dp"

               android:hint="Enter vechicle type"
               android:padding="6dp"
               android:textSize="16dp" />



           <TextView
               android:id="@+id/vehicle_no"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Vehicle Number*"
               android:inputType="text"
               android:layout_below="@+id/vehicle_edit"
               android:textColor="#555555"
               android:textSize="16dp"
               android:layout_marginTop="10dp"
               />


           <EditText
               android:id="@+id/vehicleno_edit"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:inputType="text"
               android:layout_below="@+id/vehicle_no"
               android:layout_marginTop="10dp"
               android:background="@drawable/border"
               android:hint="Enter vechicle Number"
               android:padding="6dp"
               android:textSize="16dp" />

           <TextView
               android:id="@+id/date_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Date*"
               android:layout_below="@+id/vehicleno_edit"
               android:textColor="#555555"
               android:textSize="16dp"
               android:layout_marginTop="10dp"
               />


           <EditText
               android:id="@+id/date_edit"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/date_text"
               android:layout_marginTop="5dp"
               android:background="@drawable/border"
               android:hint="Enter date(dd/mm/yy)"
               android:padding="6dp"
               android:textSize="16dp" />

           <TextView
               android:id="@+id/duration_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Duration*"
               android:layout_below="@+id/date_edit"
               android:textColor="#555555"
               android:textSize="16dp"
               android:layout_marginTop="10dp"
               />


           <EditText
               android:id="@+id/duration_edit"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:inputType="number"
               android:background="@drawable/border"
               android:layout_below="@+id/duration_text"
               android:layout_marginTop="5dp"
               android:hint="Enter duration"
               android:padding="6dp"
               android:textSize="16dp" />


           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/duration_edit"
               android:text="Book"
               android:id="@+id/book"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="130dp"/>

           <ProgressBar
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:id="@+id/progressbar1"
               style="?android:attr/progressBarStyleLarge"
               android:layout_centerVertical="true"
               android:layout_centerHorizontal="true"
               android:elevation="5dp"
               android:visibility="gone"
               />




       </RelativeLayout>

</ScrollView>