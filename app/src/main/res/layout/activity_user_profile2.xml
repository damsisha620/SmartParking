<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#5cc09f">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/profile_img"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_profile"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:layout_below="@id/profile_img"
                android:hint="Loading..."
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@color/white">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ic_profile"
                android:background="@drawable/ic_profile" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textname"
                android:layout_alignStart="@id/ic_profile"
                android:hint="Loading..."
                android:layout_marginLeft="50dp"
                android:textSize="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textname"
                android:background="@android:color/darker_gray"
                android:id="@+id/divider_name"
                />
            <!-- Show Email -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ic_email"
                android:background="@drawable/ic_email"
                android:layout_below="@+id/divider_name"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textemail"
                android:layout_alignStart="@id/ic_email"
                android:hint="Loading..."
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:layout_below="@+id/divider_name"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textemail"
                android:background="@android:color/darker_gray"
                android:id="@+id/divider_email" />
            <!-- Show Dob -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ic_dob"
                android:background="@drawable/ic_dob"
                android:layout_below="@+id/divider_email"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textdob"
                android:layout_alignStart="@id/ic_dob"
                android:hint="Loading..."
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:layout_below="@+id/divider_email"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textdob"
                android:background="@android:color/darker_gray"
                android:id="@+id/divider_dob" />

            <!-- Show Gender -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ic_gender"
                android:background="@drawable/ic_gender"
                android:layout_below="@+id/divider_dob"
                android:layout_marginTop="26dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textgender"
                android:layout_alignStart="@id/ic_gender"
                android:hint="Loading..."
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:layout_below="@+id/divider_dob"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textgender"
                android:background="@android:color/darker_gray"
                android:id="@+id/divider_gender" />
            <!-- Show Mobile -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ic_mobile"
                android:background="@drawable/ic_phone"
                android:layout_below="@+id/divider_gender"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textphone"
                android:layout_alignStart="@+id/ic_mobile"
                android:hint="Loading..."
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:layout_below="@+id/divider_gender"/>
            <ProgressBar
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:elevation="10dp"
                android:visibility="gone"
                />
        </RelativeLayout>
    </LinearLayout>
   

</ScrollView>